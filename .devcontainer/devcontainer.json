{
  "name": "dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers-extra/features/neovim-apt-get:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "mounts": [
    "source=nvim-data,target=/home/vscode/.local/share/nvim,type=volume",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,readonly"
  ],
  "containerEnv": {
    "CLAUDE_CREDENTIALS": "${localEnv:CLAUDE_CREDENTIALS}"
  },
  "postCreateCommand": "nvim --headless +PlugInstall +qall 2>/dev/null || true && npm install -g @anthropic-ai/claude-code",
  "postStartCommand": "[ -n \"$CLAUDE_CREDENTIALS\" ] && mkdir -p \"$(readlink -f ~/.claude)\" && echo \"$CLAUDE_CREDENTIALS\" > \"$(readlink -f ~/.claude)/.credentials.json\" && chmod 600 \"$(readlink -f ~/.claude)/.credentials.json\" || true"
}
